@import 'nib/positions'
@import 'nib/vendor'
@import 'nib/size'

// Import the text font.
// TODO inline this file.
@import url(https://fonts.googleapis.com/css?family=Roboto);

// Import the icon font.
@import './icons'


$color-background = #202020
$color-stroke     = #303030

$color-highlight  = #0088ff
$color-text       = #ffffff

$font = Roboto, monospace

.tweeq-root

  width 250px

  background $color-background

  border-left 1px $color-stroke solid
  border-right 1px $color-stroke solid

  &, & *

    margin 0
    padding 0

    user-select none

.clickable
.clickable *

  cursor pointer

.tweeq-group

  size 100% 100%

.tweeq-row

  position relative
  border-bottom 1px solid $color-stroke

.tweeq-control

  padding 8px
  display flex

  color $color-text
  font-size 11px
  font-family $font
  text-transform lowercase

  label

    flex 1 1
    align-self center

  input
  select
  .tweeq-slider

    flex 2 1
    cursor pointer

  i

    padding 0 4 0 0
    display inline-flex

  input[type='text']

    background none
    outline none
    border none

    color $color-text
    font-family $font
    text-align right

  input[type='checkbox']

    flex 0 1 auto

  .tweeq-slider

    position relative

    > div:nth-child(1)

      background black

    > div:nth-child(2)

      background $color-highlight

.tweeq-depth

  absolute top 0 bottom -1px // accomodate the row's border-bottom
  width 5px
  padding 0
