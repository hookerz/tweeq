@import 'nib/positions'
@import 'nib/vendor'
@import 'nib/size'

// Import the text font.
// TODO inline this file.
@import url(https://fonts.googleapis.com/css?family=Roboto);

// Import the icon font.
@import './icons'

@import './theme-default'

.tweeq-root

  width 250px
  margin 0
  padding 0

  background $color-background

  user-select none

.tweeq-group

  size 100% 100%

.tweeq-row

  position relative
  border-bottom 1px solid $color-stroke

.tweeq-control

  padding 8px
  display flex

  color $color-text
  font-size 11px
  font-family $font
  text-transform lowercase

  label

    flex 1 1 0
    align-self center

  input

    flex 2 1 0
    cursor pointer
    overflow hidden

.tweeq-depth

  absolute top 0 bottom -1px // accomodate the row's border-bottom
  width 5px
  padding 0
