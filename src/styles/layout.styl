@import 'nib/positions'
@import 'nib/vendor'
@import 'nib/size'

// Import the text font.
// TODO inline this file.
@import url(https://fonts.googleapis.com/css?family=Roboto);

// Import the icon font.
@import './icons'

@import './theme-default'

.tweeq-root

  width 250px

  background $color-background

  &, & *

    margin 0
    padding 0

    user-select none

.clickable
.clickable *

  cursor pointer

.tweeq-group

  size 100% 100%

.tweeq-row

  position relative
  border-bottom 1px solid $color-stroke

.tweeq-control

  padding 8px
  display flex

  color $color-text
  font-size 11px
  font-family $font
  text-transform lowercase

  label

    flex 1 1
    align-self center

  input
  select
  .tweeq-slider

    flex 2 1
    cursor pointer

  i

    padding-top 4px
    display inline-flex

  input[type='checkbox']

    flex 0 1 auto

.tweeq-slider

  position relative

  border 1px solid $color-stroke

  > div:nth-child(1)

    background black

  > div:nth-child(2)

    background $color-highlight

.tweeq-depth

  absolute top 0 bottom -1px // accomodate the row's border-bottom
  width 5px
  padding 0
