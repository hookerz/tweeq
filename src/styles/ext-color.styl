@import 'nib/vendor'

.tweeq-color-group

  flex 2 1

.tweeq-color-preview

  flex 2 1

  padding 0.5em

  text-align center
  font-family monospace
  font-weight bold
  user-select text

.tweeq-color-selector

  flex 2 1
  display flex

  margin-top 1em

.tweeq-color-satval
.tweeq-color-hue

  height 10em
  position relative
  display inline-block

.tweeq-color-hue

  width 2em

  flex none
  align-self flex-end
  margin-left auto !important

.tweeq-color-satval

  width 10em

  flex none

// The two square gradients that are combined to create the saturation/value
// square. They are absolutely positioned because they must overlap.
.tweeq-color-gradient

  position absolute
  top 0; bottom 0;
  left 0; right 0;

.tweeq-color-tooltip

  position absolute

  > i

    position relative
    top -0.5em
    left -0.5em
